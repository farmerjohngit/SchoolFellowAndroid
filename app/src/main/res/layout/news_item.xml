<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
    >

    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="学校正式启动“理想林科大”大讨论活动 党委书记胡长清强调：出主意、找特色、比优势、寻资源、谋发展"
        />


    <com.csuft.zzc.schoolfellow.base.view.WebImageView
        android:id="@+id/news_pic"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_below="@id/news_title"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>

    <TextView
        android:id="@+id/news_pre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_title"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/news_pic"
        android:maxHeight="50dp"
        android:maxLines="3"
        android:text=" 【林大网讯】4月19日，“理想林科大”大讨论活动工作布置会在行政楼四楼会议室举行，标志着此次大讨论活动的正式启动。党委书记胡长清出席会议并讲话，对大讨论活动做了布置安排。党（校）办、党委宣传部、党委统战部、校工会、学生工作部、团委、离退休处、科学技术处、社会科学处、研究生院等部门、单位的负责人参加了会议。"/>

    <TextView
        android:id="@+id/news_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_pre"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/news_pic"
        android:gravity="right"
        android:text="2016-04-21"

        />
</RelativeLayout>