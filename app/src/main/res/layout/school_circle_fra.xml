<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stick="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.csuft.zzc.schoolfellow.base.view.AbsAutoScrollLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/id_stick_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.csuft.zzc.schoolfellow.base.view.AutoScrollViewPager
                android:id="@+id/scrollPager"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/id_stick_nav"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/id_stick_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </com.csuft.zzc.schoolfellow.base.view.AbsAutoScrollLayout>
</LinearLayout>