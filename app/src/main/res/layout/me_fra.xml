<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c5c5c5"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1px">

            <com.csuft.zzc.schoolfellow.base.view.WebImageView
                android:id="@+id/head_img"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/time_txt"
                android:layout_toRightOf="@+id/head_img"
                android:text="酸梅汤喝我"
                android:textSize="@dimen/user_name_text_size"/>

            <TextView
                android:id="@+id/content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_txt"
                android:layout_toLeftOf="@+id/time_txt"
                android:layout_toRightOf="@+id/head_img"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="简介：二十岁的男人有太多的眼泪"
                android:textColor="#c5c5c5"/>

            <ImageView
                android:id="@+id/me_more"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                style="@style/user_relation_information_layout_style">

                <TextView

                    style="@style/user_relation_information_style"
                    android:text="10"/>

                <TextView
                    style="@style/user_relation_information_style"
                    android:text="微博"/>
            </LinearLayout>

            <LinearLayout
                style="@style/user_relation_information_layout_style">

                <TextView
                    style="@style/user_relation_information_style"
                    android:text="91"/>

                <TextView
                    style="@style/user_relation_information_style"
                    android:text="关注"/>
            </LinearLayout>

            <LinearLayout
                style="@style/user_relation_information_layout_style">

                <TextView
                    style="@style/user_relation_information_style"
                    android:text="17"/>

                <TextView
                    style="@style/user_relation_information_style"
                    android:text="粉丝"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>